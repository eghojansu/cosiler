{
    "name": "ekok/cosiler",
    "description": "PHP Framework",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Eko Kurniawan",
            "email": "setiawanegho@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ekok/php-utils": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Ekok\\Cosiler\\": "src/"
        },
        "files": [
            "src/Encoder/Json.php",
            "src/Http/Http.php",
            "src/Http/Request.php",
            "src/Http/Response.php",
            "src/Route/Route.php",
            "src/Template/Template.php",
            "src/Cosiler.php"
        ]
    },
    "autoload-dev": {
        "classmap": ["tests/fixtures/classes"]
    },
    "suggest": {
        "ekok/php-container": "Context container and DI manager",
        "ekok/php-sql": "Mapping code with SQL database tables",
        "ekok/php-utils": "A set of php utilities",
        "ekok/php-validation": "Validating user input"
    }
}
